<%- include('partials/header') %>

<style>
  .verify-container {
    min-height: 100vh;
    background: linear-gradient(135deg, #0b1020 0%, #1a1f3a 50%, #667eea 100%);
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 40px 20px;
    position: relative;
    overflow: hidden;
  }
  
  /* Animated background elements */
  .verify-container::before {
    content: '';
    position: absolute;
    top: -50%;
    right: -50%;
    width: 100%;
    height: 100%;
    background: radial-gradient(circle, rgba(102, 126, 234, 0.15) 0%, transparent 70%);
    animation: float 20s ease-in-out infinite;
  }
  
  .verify-container::after {
    content: '';
    position: absolute;
    bottom: -50%;
    left: -50%;
    width: 100%;
    height: 100%;
    background: radial-gradient(circle, rgba(118, 75, 162, 0.15) 0%, transparent 70%);
    animation: float 25s ease-in-out infinite reverse;
  }
  
  @keyframes float {
    0%, 100% { transform: translate(0, 0) rotate(0deg); }
    33% { transform: translate(30px, -30px) rotate(120deg); }
    66% { transform: translate(-20px, 20px) rotate(240deg); }
  }
  
  .verify-card {
    max-width: 480px;
    width: 100%;
    background: rgba(15, 23, 42, 0.95);
    backdrop-filter: blur(20px);
    border: 1px solid rgba(255, 255, 255, 0.1);
    border-radius: 32px;
    overflow: hidden;
    box-shadow: 0 30px 80px rgba(0, 0, 0, 0.5), 0 0 0 1px rgba(255, 255, 255, 0.05);
    position: relative;
    z-index: 1;
    animation: slideIn 0.6s cubic-bezier(0.34, 1.56, 0.64, 1);
  }
  
  @keyframes slideIn {
    from { opacity: 0; transform: translateY(30px) scale(0.95); }
    to { opacity: 1; transform: translateY(0) scale(1); }
  }
  
  .verify-header {
    background: linear-gradient(135deg, #667eea, #764ba2);
    padding: 48px 40px;
    text-align: center;
    position: relative;
  }
  
  .verify-icon {
    width: 80px;
    height: 80px;
    background: rgba(255, 255, 255, 0.2);
    backdrop-filter: blur(10px);
    border-radius: 24px;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 40px;
    margin: 0 auto 20px;
    animation: pulse 2s ease-in-out infinite;
  }
  
  @keyframes pulse {
    0%, 100% { transform: scale(1); box-shadow: 0 0 0 0 rgba(255, 255, 255, 0.7); }
    50% { transform: scale(1.05); box-shadow: 0 0 0 20px rgba(255, 255, 255, 0); }
  }
  
  .verify-header h1 {
    color: white;
    font-size: 32px;
    font-weight: 900;
    margin: 0 0 12px;
  }
  
  .verify-header p {
    color: rgba(255, 255, 255, 0.9);
    font-size: 16px;
    margin: 0;
    line-height: 1.6;
  }
  
  .verify-body {
    padding: 40px;
  }
  
  .user-greeting {
    text-align: center;
    margin-bottom: 32px;
  }
  
  .user-greeting h2 {
    color: #e5e7eb;
    font-size: 24px;
    font-weight: 700;
    margin: 0 0 8px;
  }
  
  .user-email {
    color: #667eea;
    font-size: 16px;
    font-weight: 600;
  }
  
  .verify-instructions {
    background: linear-gradient(135deg, rgba(102, 126, 234, 0.1), rgba(118, 75, 162, 0.1));
    border-left: 4px solid #667eea;
    padding: 20px;
    border-radius: 12px;
    margin-bottom: 32px;
  }
  
  .verify-instructions p {
    color: #cbd5e1;
    font-size: 15px;
    line-height: 1.6;
    margin: 0;
  }
  
  .code-input-container {
    margin-bottom: 24px;
  }
  
  .code-label {
    display: block;
    color: #cbd5e1;
    font-weight: 600;
    font-size: 14px;
    margin-bottom: 12px;
    text-align: center;
  }
  
  .code-input-wrapper {
    display: flex;
    justify-content: center;
    gap: 12px;
    margin-bottom: 16px;
  }
  
  .code-digit {
    width: 56px;
    height: 64px;
    background: rgba(11, 16, 32, 0.6);
    border: 2px solid rgba(255, 255, 255, 0.1);
    border-radius: 12px;
    color: #e5e7eb;
    font-size: 32px;
    font-weight: 700;
    text-align: center;
    transition: all 0.3s ease;
    font-family: 'Courier New', monospace;
  }
  
  .code-digit:focus {
    outline: none;
    border-color: #667eea;
    background: rgba(11, 16, 32, 0.8);
    box-shadow: 0 0 0 4px rgba(102, 126, 234, 0.2);
    transform: scale(1.05);
  }
  
  .verify-btn {
    width: 100%;
    padding: 18px;
    background: linear-gradient(135deg, #667eea, #764ba2);
    color: white;
    border: none;
    border-radius: 16px;
    font-size: 18px;
    font-weight: 700;
    cursor: pointer;
    transition: all 0.3s;
    box-shadow: 0 10px 30px rgba(102, 126, 234, 0.4);
  }
  
  .verify-btn:hover:not(:disabled) {
    transform: translateY(-2px);
    box-shadow: 0 14px 40px rgba(102, 126, 234, 0.5);
  }
  
  .verify-btn:disabled {
    opacity: 0.6;
    cursor: not-allowed;
  }
  
  .resend-section {
    text-align: center;
    margin-top: 24px;
    padding-top: 24px;
    border-top: 1px solid rgba(255, 255, 255, 0.1);
  }
  
  .resend-text {
    color: #94a3b8;
    font-size: 14px;
    margin-bottom: 12px;
  }
  
  .resend-btn {
    background: none;
    border: none;
    color: #667eea;
    font-weight: 600;
    font-size: 14px;
    cursor: pointer;
    text-decoration: underline;
    transition: all 0.2s;
  }
  
  .resend-btn:hover {
    color: #764ba2;
  }
  
  .resend-btn:disabled {
    opacity: 0.5;
    cursor: not-allowed;
  }
  
  .timer {
    color: #f59e0b;
    font-weight: 700;
  }
  
  .success-animation {
    display: none;
    text-align: center;
    padding: 40px 20px;
  }
  
  .success-icon {
    font-size: 80px;
    margin-bottom: 20px;
    animation: successPop 0.6s cubic-bezier(0.34, 1.56, 0.64, 1);
  }
  
  @keyframes successPop {
    from { transform: scale(0); opacity: 0; }
    to { transform: scale(1); opacity: 1; }
  }
  
  .success-message {
    color: #10b981;
    font-size: 24px;
    font-weight: 700;
    margin-bottom: 12px;
  }
  
  .success-submessage {
    color: #94a3b8;
    font-size: 16px;
  }
  
  @media (max-width: 640px) {
    .verify-card {
      border-radius: 24px;
    }
    
    .verify-header {
      padding: 32px 24px;
    }
    
    .verify-body {
      padding: 24px;
    }
    
    .code-digit {
      width: 48px;
      height: 56px;
      font-size: 28px;
    }
  }
</style>

<div class="verify-container">
  <div class="verify-card">
    <div class="verify-header">
      <div class="verify-icon">ðŸ“§</div>
      <h1>Check Your Email</h1>
      <p>We've sent a verification code to your inbox</p>
    </div>
    
    <div class="verify-body">
      <div class="user-greeting">
        <h2>Welcome, <%= user.full_name %>! ðŸ‘‹</h2>
        <p class="user-email"><%= user.email %></p>
      </div>
      
      <div class="verify-instructions">
        <p>
          ðŸŽ¯ <strong>Almost there!</strong> Enter the 6-digit code we sent to your email to verify your account 
          and unlock the full Dream X experience.
        </p>
      </div>
      
      <form id="verifyForm">
        <div class="code-input-container">
          <label class="code-label">Enter Verification Code</label>
          <div class="code-input-wrapper">
            <input type="text" class="code-digit" maxlength="1" id="digit1" />
            <input type="text" class="code-digit" maxlength="1" id="digit2" />
            <input type="text" class="code-digit" maxlength="1" id="digit3" />
            <input type="text" class="code-digit" maxlength="1" id="digit4" />
            <input type="text" class="code-digit" maxlength="1" id="digit5" />
            <input type="text" class="code-digit" maxlength="1" id="digit6" />
          </div>
        </div>
        
        <button type="submit" class="verify-btn" id="verifyBtn">
          âœ¨ Verify & Continue
        </button>
      </form>
      
      <div class="resend-section">
        <p class="resend-text">Didn't receive the code?</p>
        <button type="button" class="resend-btn" id="resendBtn">
          <span id="resendText">Resend Code</span>
          <span id="resendTimer" style="display: none;">Resend in <span class="timer">60</span>s</span>
        </button>
      </div>
      
      <div class="success-animation" id="successAnimation">
        <div class="success-icon">âœ…</div>
        <p class="success-message">Email Verified!</p>
        <p class="success-submessage">Redirecting to onboarding...</p>
      </div>
    </div>
  </div>
</div>

<script>
(function() {
  const form = document.getElementById('verifyForm');
  const verifyBtn = document.getElementById('verifyBtn');
  const resendBtn = document.getElementById('resendBtn');
  const resendText = document.getElementById('resendText');
  const resendTimer = document.getElementById('resendTimer');
  const successAnimation = document.getElementById('successAnimation');
  const inputs = [
    document.getElementById('digit1'),
    document.getElementById('digit2'),
    document.getElementById('digit3'),
    document.getElementById('digit4'),
    document.getElementById('digit5'),
    document.getElementById('digit6')
  ];
  
  let resendCountdown = 0;
  let resendInterval = null;
  
  // Auto-focus first input
  inputs[0].focus();
  
  // Handle digit input with auto-advance
  inputs.forEach((input, index) => {
    input.addEventListener('input', (e) => {
      const value = e.target.value;
      
      // Only allow digits
      if (!/^\d$/.test(value)) {
        e.target.value = '';
        return;
      }
      
      // Auto-advance to next input
      if (value && index < inputs.length - 1) {
        inputs[index + 1].focus();
      }
      
      // Auto-submit when all 6 digits entered
      if (index === inputs.length - 1 && value) {
        const code = inputs.map(i => i.value).join('');
        if (code.length === 6) {
          setTimeout(() => form.requestSubmit(), 200);
        }
      }
    });
    
    // Handle backspace
    input.addEventListener('keydown', (e) => {
      if (e.key === 'Backspace' && !e.target.value && index > 0) {
        inputs[index - 1].focus();
        inputs[index - 1].value = '';
      }
    });
    
    // Handle paste
    input.addEventListener('paste', (e) => {
      e.preventDefault();
      const paste = (e.clipboardData || window.clipboardData).getData('text');
      const digits = paste.replace(/\D/g, '').split('').slice(0, 6);
      
      digits.forEach((digit, i) => {
        if (inputs[i]) {
          inputs[i].value = digit;
        }
      });
      
      if (digits.length === 6) {
        inputs[5].focus();
        setTimeout(() => form.requestSubmit(), 200);
      } else if (digits.length > 0) {
        const lastIndex = Math.min(digits.length, 5);
        inputs[lastIndex].focus();
      }
    });
  });
  
  // Form submission
  form.addEventListener('submit', async (e) => {
    e.preventDefault();
    
    const code = inputs.map(i => i.value).join('');
    
    if (code.length !== 6) {
      if (window.showWarning) {
        showWarning('Please enter all 6 digits');
      } else {
        alert('Please enter all 6 digits');
      }
      return;
    }
    
    verifyBtn.disabled = true;
    verifyBtn.textContent = 'â³ Verifying...';
    
    try {
      const response = await fetch('/verify-email', {
        method: 'POST',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify({ code })
      });
      
      const data = await response.json();
      
      if (data.success) {
        // Show success animation
        form.style.display = 'none';
        document.querySelector('.resend-section').style.display = 'none';
        successAnimation.style.display = 'block';
        
        if (window.showSuccess) {
          showSuccess('Email verified successfully! ðŸŽ‰');
        }
        
        // Redirect after animation
        setTimeout(() => {
          window.location.href = data.redirect || '/onboarding';
        }, 1500);
      } else {
        if (window.showError) {
          showError(data.error || 'Verification failed');
        } else {
          alert(data.error || 'Verification failed');
        }
        
        verifyBtn.disabled = false;
        verifyBtn.textContent = 'âœ¨ Verify & Continue';
        
        // Clear inputs
        inputs.forEach(i => i.value = '');
        inputs[0].focus();
      }
    } catch (err) {
      console.error('Verification error:', err);
      if (window.showError) {
        showError('Network error. Please try again.');
      } else {
        alert('Network error. Please try again.');
      }
      
      verifyBtn.disabled = false;
      verifyBtn.textContent = 'âœ¨ Verify & Continue';
    }
  });
  
  // Resend code
  function startResendTimer() {
    resendCountdown = 60;
    resendBtn.disabled = true;
    resendText.style.display = 'none';
    resendTimer.style.display = 'inline';
    
    resendInterval = setInterval(() => {
      resendCountdown--;
      const timerSpan = resendTimer.querySelector('.timer');
      if (timerSpan) {
        timerSpan.textContent = resendCountdown;
      }
      
      if (resendCountdown <= 0) {
        clearInterval(resendInterval);
        resendBtn.disabled = false;
        resendText.style.display = 'inline';
        resendTimer.style.display = 'none';
      }
    }, 1000);
  }
  
  resendBtn.addEventListener('click', async () => {
    try {
      const response = await fetch('/resend-verification', {
        method: 'POST',
        headers: { 'Content-Type': 'application/json' }
      });
      
      const data = await response.json();
      
      if (data.success) {
        if (window.showSuccess) {
          showSuccess(data.message || 'New code sent! Check your email.');
        } else {
          alert(data.message || 'New code sent!');
        }
        
        startResendTimer();
        
        // Clear and refocus
        inputs.forEach(i => i.value = '');
        inputs[0].focus();
      } else {
        if (window.showError) {
          showError(data.error || 'Failed to resend code');
        } else {
          alert(data.error || 'Failed to resend code');
        }
      }
    } catch (err) {
      console.error('Resend error:', err);
      if (window.showError) {
        showError('Network error. Please try again.');
      } else {
        alert('Network error. Please try again.');
      }
    }
  });
  
  // Auto-send verification code on page load if user was redirected from another page
  // Check if this is a redirect (not from register page)
  const isRedirect = document.referrer && !document.referrer.includes('/register');
  
  if (isRedirect) {
    // User was redirected from another page, auto-send verification code
    console.log('User redirected to verification page, auto-sending code...');
    fetch('/resend-verification', {
      method: 'POST',
      headers: { 'Content-Type': 'application/json' }
    })
    .then(response => response.json())
    .then(data => {
      if (data.success) {
        console.log('Verification code auto-sent on page load');
        if (window.showSuccess) {
          showSuccess('Verification code sent to your email');
        }
      }
    })
    .catch(err => {
      console.error('Auto-send verification code error:', err);
    });
  }
  
  // Start initial timer
  startResendTimer();
})();
</script>

