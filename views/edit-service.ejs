      e.preventDefault();
      return;
    }
    
    const availability = document.getElementById('availability').value;
    try {
      const av = JSON.parse(availability);
      if(!av.dates || av.dates.length === 0) {
        e.preventDefault();
        if(window.showWarning) {
          showWarning('Please add at least one availability slot!');
        } else {
          alert('Please add at least one availability slot');
        }
        return;
      }
    } catch(err) {
      e.preventDefault();
      if(window.showError) {
        showError('Availability data is invalid. Please try adding slots again.');
      }
      return;
    }
    
    saving = true; 
    btn.innerHTML = 'üíæ Saving‚Ä¶'; 
    btn.style.opacity='.7';
    btn.style.pointerEvents = 'none';
  });
})();
