<%- include('partials/header') %>

<section class="help-hero">
  <div class="help-hero-inner">
    <h1 class="help-title">Help Center</h1>
    <p class="help-subtitle">We’re here to help you build, not get stuck.</p>
  </div>
</section>

<section class="help-search-section">
  <form action="#" method="GET" class="help-search-form" onsubmit="event.preventDefault();">
    <input type="text" class="help-search-input" placeholder="Search for help topics…" aria-label="Search help center" />
    <button type="submit" class="help-search-btn">Search</button>
  </form>
</section>

<section class="help-faq-section">
  <div class="faq-list" role="list">
    <% faqs.forEach(function(item, idx){ %>
      <div class="faq-item" data-faq>
        <button class="faq-question" type="button" aria-expanded="false" aria-controls="faq-answer-<%= idx %>">
          <span class="faq-question-text"><%= item.q %></span>
          <span class="faq-toggle">+</span>
        </button>
        <div id="faq-answer-<%= idx %>" class="faq-answer" hidden>
          <p><%= item.a %></p>
        </div>
      </div>
    <% }); %>
  </div>
</section>

<section class="help-contact-section">
  <div class="help-contact-card">
    <h2 class="contact-heading">Still need help?</h2>
    <p class="contact-text">Email us at <strong>support@dreamx.app</strong> and we’ll get back within 24 hours.</p>
    <a href="#" class="contact-btn">Contact Support</a>
  </div>
</section>

<style>
/* Help Center Enhanced Styling */
.help-hero {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  padding: 4rem 2rem;
  text-align: center;
  color: white;
  position: relative;
  overflow: hidden;
}

.help-hero::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: url('data:image/svg+xml,<svg width="100" height="100" xmlns="http://www.w3.org/2000/svg"><defs><pattern id="grid" width="100" height="100" patternUnits="userSpaceOnUse"><path d="M 100 0 L 0 0 0 100" fill="none" stroke="rgba(255,255,255,0.1)" stroke-width="1"/></pattern></defs><rect width="100" height="100" fill="url(%23grid)"/></svg>');
  opacity: 0.3;
}

.help-hero-inner {
  max-width: 800px;
  margin: 0 auto;
  position: relative;
  z-index: 1;
}

.help-title {
  font-size: 3rem;
  font-weight: 800;
  margin-bottom: 1rem;
  text-shadow: 0 2px 10px rgba(0,0,0,0.2);
}

.help-subtitle {
  font-size: 1.25rem;
  font-weight: 400;
  opacity: 0.95;
  letter-spacing: 0.5px;
}

.help-search-section {
  max-width: 700px;
  margin: -2rem auto 3rem;
  padding: 0 2rem;
  position: relative;
  z-index: 10;
}

.help-search-form {
  display: flex;
  gap: 1rem;
  background: white;
  padding: 0.5rem;
  border-radius: 50px;
  box-shadow: 0 10px 40px rgba(0,0,0,0.15);
}

.help-search-input {
  flex: 1;
  border: none;
  padding: 1rem 1.5rem;
  font-size: 1rem;
  outline: none;
  background: transparent;
}

.help-search-btn {
  background: linear-gradient(135deg, #ff4fa3 0%, #e63e8f 100%);
  color: white;
  border: none;
  padding: 1rem 2.5rem;
  border-radius: 50px;
  font-weight: 700;
  cursor: pointer;
  transition: transform 0.2s, box-shadow 0.2s;
  font-size: 1rem;
}

.help-search-btn:hover {
  transform: translateY(-2px);
  box-shadow: 0 6px 20px rgba(255, 79, 163, 0.4);
}

.help-faq-section {
  max-width: 900px;
  margin: 0 auto 4rem;
  padding: 0 2rem;
}

.faq-list {
  display: flex;
  flex-direction: column;
  gap: 1rem;
}

.faq-item {
  background: white;
  border: 2px solid #e5e7eb;
  border-radius: 12px;
  overflow: hidden;
  transition: all 0.3s ease;
}

.faq-item:hover {
  border-color: var(--primary-color);
  box-shadow: 0 6px 20px rgba(255, 79, 163, 0.15);
  transform: translateY(-2px);
}

.faq-question {
  width: 100%;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 1.5rem 2rem;
  background: white;
  border: none;
  cursor: pointer;
  text-align: left;
  font-size: 1.1rem;
  font-weight: 700;
  color: #1f2937;
  transition: background 0.2s;
}

.faq-question:hover {
  background: #f9fafb;
}

.faq-question-text {
  flex: 1;
  padding-right: 1rem;
}

.faq-toggle {
  font-size: 1.5rem;
  font-weight: 400;
  color: var(--primary-color);
  width: 30px;
  height: 30px;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 50%;
  background: rgba(255, 79, 163, 0.1);
  transition: transform 0.3s ease;
}

.faq-question[aria-expanded="true"] .faq-toggle {
  transform: rotate(45deg);
}

.faq-answer {
  padding: 0 2rem 1.5rem 2rem;
  color: #4b5563;
  line-height: 1.8;
  font-size: 1rem;
  animation: slideDown 0.3s ease;
}

@keyframes slideDown {
  from {
    opacity: 0;
    transform: translateY(-10px);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

.faq-answer p {
  margin: 0;
}

.help-contact-section {
  max-width: 700px;
  margin: 0 auto 4rem;
  padding: 0 2rem;
}

.help-contact-card {
  background: linear-gradient(135deg, rgba(102, 126, 234, 0.1) 0%, rgba(255, 79, 163, 0.1) 100%);
  border: 2px solid rgba(255, 79, 163, 0.2);
  border-radius: 16px;
  padding: 3rem;
  text-align: center;
}

.contact-heading {
  font-size: 2rem;
  margin-bottom: 1rem;
  color: #1f2937;
  font-weight: 800;
}

.contact-text {
  font-size: 1.1rem;
  color: #4b5563;
  margin-bottom: 2rem;
  line-height: 1.7;
}

.contact-btn {
  display: inline-block;
  background: linear-gradient(135deg, #ff4fa3 0%, #e63e8f 100%);
  color: white;
  padding: 1rem 3rem;
  border-radius: 50px;
  text-decoration: none;
  font-weight: 700;
  font-size: 1.1rem;
  transition: transform 0.2s, box-shadow 0.2s;
  box-shadow: 0 4px 15px rgba(255, 79, 163, 0.3);
}

.contact-btn:hover {
  transform: translateY(-3px);
  box-shadow: 0 8px 25px rgba(255, 79, 163, 0.4);
}

@media (max-width: 768px) {
  .help-title {
    font-size: 2rem;
  }
  
  .help-subtitle {
    font-size: 1rem;
  }
  
  .help-search-form {
    flex-direction: column;
    border-radius: 16px;
  }
  
  .help-search-btn {
    border-radius: 12px;
  }
  
  .faq-question {
    padding: 1.25rem 1.5rem;
    font-size: 1rem;
  }
  
  .faq-answer {
    padding: 0 1.5rem 1.25rem 1.5rem;
  }
  
  .help-contact-card {
    padding: 2rem 1.5rem;
  }
  
  .contact-heading {
    font-size: 1.5rem;
  }
}
</style>

<script>
  // Simple accordion behavior
  document.addEventListener('DOMContentLoaded', () => {
    document.querySelectorAll('.faq-question').forEach(btn => {
      btn.addEventListener('click', () => {
        const expanded = btn.getAttribute('aria-expanded') === 'true';
        const answer = document.getElementById(btn.getAttribute('aria-controls'));
        btn.setAttribute('aria-expanded', !expanded);
        if(expanded){
          answer.hidden = true;
          btn.querySelector('.faq-toggle').textContent = '+';
        } else {
          answer.hidden = false;
          btn.querySelector('.faq-toggle').textContent = '−';
        }
      });
    });
  });
</script>

<%- include('partials/footer') %>
