    <script>
        let currentStep = 1;
        const totalSteps = 10;

        // Initialize form interactions
        document.addEventListener('DOMContentLoaded', function() {
            initializeCardSelection();
            initializeFileUpload();
            updateNavigation();
        });

        function initializeCardSelection() {
            document.querySelectorAll('.option-card').forEach(card => {
                const input = card.querySelector('input');
                
                if (!input) return;
                
                // Initial state
                if (input.checked) {
                    card.classList.add('selected');
                }
                
                card.addEventListener('click', function(e) {
                    e.preventDefault();
                    e.stopPropagation();
                    
                    if (input.type === 'checkbox') {
                        input.checked = !input.checked;
                        card.classList.toggle('selected', input.checked);
                    } else if (input.type === 'radio') {
                        // Remove selected from all radio cards with same name
                        document.querySelectorAll(`input[name="${input.name}"]`).forEach(radio => {
                            radio.closest('.option-card').classList.remove('selected');
                            radio.checked = false;
                        });
                        input.checked = true;
                        card.classList.add('selected');
                    }
                });

                // Prevent input click from bubbling
                input.addEventListener('click', function(e) {
                    e.stopPropagation();
                });

                // Keyboard support
                card.addEventListener('keydown', function(e) {
                    if (e.key === 'Enter' || e.key === ' ') {
                        e.preventDefault();
                        card.click();
                    }
                });
                
                card.setAttribute('tabindex', '0');
            });
        }

        function initializeFileUpload() {
            const fileInput = document.getElementById('profilePicture');
            const preview = document.getElementById('profilePreview');
            
            if (fileInput) {
                fileInput.addEventListener('change', function(e) {
                    const file = e.target.files[0];
                    if (file) {
                        const reader = new FileReader();
                        reader.onload = function(e) {
                            preview.src = e.target.result;
                            preview.classList.add('visible');
                        };
                        reader.readAsDataURL(file);
                    }
                });
            }
        }

        function nextStep() {
            if (currentStep < totalSteps) {
                // Hide current step
                document.querySelector(`[data-step="${currentStep}"]`).classList.remove('active');
                
                // Increment step
                currentStep++;
                
                // Show next step
                document.querySelector(`[data-step="${currentStep}"]`).classList.add('active');
                
                // Update progress
                updateProgress();
                updateNavigation();
                
                // Scroll to top
                window.scrollTo({ top: 0, behavior: 'smooth' });
            } else if (currentStep === totalSteps) {
                // Show welcome screen
                document.querySelector(`[data-step="${currentStep}"]`).classList.remove('active');
                currentStep++;
                document.querySelector(`[data-step="${currentStep}"]`).classList.add('active');
                document.getElementById('actionButtons').style.display = 'none';
                updateProgress();
            }
        }

        function previousStep() {
            if (currentStep > 1 && currentStep <= totalSteps) {
                // Hide current step
                document.querySelector(`[data-step="${currentStep}"]`).classList.remove('active');
                
                // Decrement step
                currentStep--;
                
                // Show previous step
                document.querySelector(`[data-step="${currentStep}"]`).classList.add('active');
                
                // Update progress
                updateProgress();
                updateNavigation();
                
                // Scroll to top
                window.scrollTo({ top: 0, behavior: 'smooth' });
            }
        }

        function updateProgress() {
            const progress = (currentStep / totalSteps) * 100;
            document.getElementById('progressFill').style.width = progress + '%';
            document.getElementById('currentStep').textContent = currentStep;
        }

        function updateNavigation() {
            const backBtn = document.getElementById('backBtn');
            const nextBtn = document.getElementById('nextBtn');
            
            // Hide back button on first step
            backBtn.style.visibility = currentStep === 1 ? 'hidden' : 'visible';
            
            // Change button text on last step
            if (currentStep === totalSteps) {
                nextBtn.textContent = 'Complete Setup üéâ';
                nextBtn.style.animation = 'pulse 1.5s infinite';
            } else {
                nextBtn.textContent = 'Continue ‚Üí';
                nextBtn.style.animation = 'none';
            }
        }

        // Form submission handler
        document.getElementById('onboardingForm').addEventListener('submit', function(e) {
            e.preventDefault();
            
            // Show loading state
            const submitBtn = document.getElementById('nextBtn');
            const originalText = submitBtn.textContent;
            submitBtn.textContent = 'Saving...';
            submitBtn.disabled = true;
            
            // Submit form
            this.submit();
        });
    </script>
