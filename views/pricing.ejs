<%- include('partials/header') %>

<!-- Pricing Hero Section -->
<section class="pricing-hero">
    <div class="container">
        <h1 class="pricing-title">Choose Your Dream X Plan</h1>
        <p class="pricing-subtitle">From creators to communities — we've got a tier for every ambition.</p>
    </div>
</section>

<!-- Pricing Cards Section -->
<section class="pricing-section">
    <div class="container">
        <div class="pricing-grid">
            <% tiers.forEach(function(tier) { %>
                <div class="pricing-card <%= tier.highlight ? 'pricing-card-highlight' : '' %>">
                    <% if (tier.highlight) { %>
                        <div class="pricing-badge">Most Popular</div>
                    <% } %>
                    <div class="pricing-card-header">
                        <h3 class="pricing-card-name"><%= tier.name %></h3>
                        <p class="pricing-card-tagline"><%= tier.tagline %></p>
                        <div class="pricing-card-price"><%= tier.price %></div>
                    </div>
                    <div class="pricing-card-body">
                        <ul class="pricing-features">
                            <% tier.features.forEach(function(feature) { %>
                                <li><span class="feature-icon">✓</span> <%= feature %></li>
                            <% }); %>
                        </ul>
                    </div>
                    <div class="pricing-card-footer">
                        <% if (tier.id === 'enterprise') { %>
                            <a href="/contact" class="pricing-btn pricing-btn-secondary">Contact Sales</a>
                        <% } else if (typeof userTier !== 'undefined' && userTier === tier.id) { %>
                            <button class="pricing-btn pricing-btn-current" disabled>Current Plan</button>
                        <% } else if (tier.id === 'free') { %>
                            <% if (typeof authUser !== 'undefined' && authUser) { %>
                                <button onclick="openCheckout('<%= tier.id %>', '<%= tier.name %>', '<%= tier.price %>', <%= JSON.stringify(tier.features) %>, '<%= tier.tagline %>')" class="pricing-btn">Switch to Free</button>
                            <% } else { %>
                                <a href="/register" class="pricing-btn">Get Started</a>
                            <% } %>
                        <% } else { %>
                            <button onclick="openCheckout('<%= tier.id %>', '<%= tier.name %>', '<%= tier.price %>', <%= JSON.stringify(tier.features) %>, '<%= tier.tagline %>')" class="pricing-btn <%= tier.highlight ? 'pricing-btn-primary' : '' %>">Choose Plan</button>
                        <% } %>
                    </div>
                    <% if (tier.note) { %>
                        <p class="tier-note"><%= tier.note %></p>
                    <% } %>
                </div>
            <% }); %>
        </div>
    </div>
</section>

<!-- Checkout Modal -->
<div id="checkoutModal" class="checkout-modal">
    <div class="checkout-modal-overlay" onclick="closeCheckout()"></div>
    <div class="checkout-modal-content">
        <button class="checkout-close" onclick="closeCheckout()" aria-label="Close">&times;</button>
        
        <!-- Progress Steps -->
        <div class="checkout-steps">
            <div class="checkout-step active">
                <div class="step-number">1</div>
                <span class="step-label">Review</span>
            </div>
            <div class="checkout-step">
                <div class="step-number">2</div>
                <span class="step-label">Payment</span>
            </div>
            <div class="checkout-step">
                <div class="step-number">3</div>
                <span class="step-label">Confirm</span>
            </div>
        </div>

        <!-- Step 1: Plan Review -->
        <div class="checkout-step-content" id="step1">
            <h2>Review Your Plan</h2>
            <div class="plan-summary">
                <h3 id="selectedPlanName"></h3>
                <p id="selectedPlanTagline"></p>
                <div class="plan-price" id="selectedPlanPrice"></div>
                <ul class="plan-features" id="selectedPlanFeatures"></ul>
            </div>
            <div class="checkout-actions">
                <button onclick="closeCheckout()" class="checkout-btn outline">Cancel</button>
                <button onclick="nextStep()" class="checkout-btn primary">Continue to Payment</button>
            </div>
        </div>

        <!-- Step 2: Payment Information -->
        <div class="checkout-step-content" id="step2" style="display: none;">
            <h2>Payment Information</h2>
            <form id="paymentForm">
                <div class="form-group">
                    <label for="cardType">Card Type</label>
                    <select id="cardType" class="form-control" required>
                        <option value="">Select card type</option>
                        <option value="visa">Visa</option>
                        <option value="mastercard">Mastercard</option>
                        <option value="amex">American Express</option>
                        <option value="discover">Discover</option>
                    </select>
                </div>
                <div class="form-group">
                    <label for="cardNumber">Card Number</label>
                    <input type="text" id="cardNumber" class="form-control" placeholder="1234 5678 9012 3456" maxlength="19" required>
                </div>
                <div class="form-row">
                    <div class="form-group">
                        <label for="expiryMonth">Expiry Month</label>
                        <select id="expiryMonth" class="form-control" required>
                            <option value="">MM</option>
                            <% for(let i = 1; i <= 12; i++) { %>
                                <option value="<%= i.toString().padStart(2, '0') %>"><%= i.toString().padStart(2, '0') %></option>
                            <% } %>
                        </select>
                    </div>
                    <div class="form-group">
                        <label for="expiryYear">Expiry Year</label>
                        <select id="expiryYear" class="form-control" required>
                            <option value="">YYYY</option>
                            <% const currentYear = new Date().getFullYear(); %>
                            <% for(let i = 0; i < 10; i++) { %>
                                <option value="<%= currentYear + i %>"><%= currentYear + i %></option>
                            <% } %>
                        </select>
                    </div>
                    <div class="form-group">
                        <label for="cvv">CVV</label>
                        <input type="text" id="cvv" class="form-control" placeholder="123" maxlength="4" required>
                    </div>
                </div>
                <div class="form-group">
                    <label class="checkbox-label">
                        <input type="checkbox" id="saveCard">
                        Save card for future purchases
                    </label>
                </div>
            </form>
            <div class="checkout-actions">
                <button onclick="prevStep()" class="checkout-btn outline">Back</button>
                <button onclick="nextStep()" class="checkout-btn primary">Review Order</button>
            </div>
        </div>

        <!-- Step 3: Confirmation -->
        <div class="checkout-step-content" id="step3" style="display: none;">
            <h2>Confirm Your Purchase</h2>
            <div class="order-summary">
                <h3>Order Summary</h3>
                <div class="summary-item">
                    <span>Plan:</span>
                    <span id="confirmPlanName"></span>
                </div>
                <div class="summary-item">
                    <span>Payment Method:</span>
                    <span id="confirmCardInfo"></span>
                </div>
                <div class="summary-item total">
                    <span>Total:</span>
                    <span id="confirmPlanPrice"></span>
                </div>
            </div>
            <div class="checkout-actions">
                <button onclick="prevStep()" class="checkout-btn outline">Back</button>
                <button onclick="processPayment()" class="checkout-btn primary" id="confirmBtn">
                    <span class="btn-text">Complete Purchase</span>
                    <span class="btn-loader" style="display: none;">Processing...</span>
                </button>
            </div>
        </div>

        <!-- Step 4: Success -->
        <div class="checkout-step-content" id="step4" style="display: none;">
            <div class="success-message">
                <div class="success-icon">✓</div>
                <h3>Welcome to <span id="successPlanName"></span>!</h3>
                <p>Your subscription is now active. Enjoy your new features!</p>
                <button onclick="window.location.href='/settings'" class="checkout-btn primary">Go to Settings</button>
            </div>
        </div>
    </div>
</div>

