<link href='https://api.mapbox.com/mapbox-gl-js/v2.15.0/mapbox-gl.css' rel='stylesheet' />
<script src='https://api.mapbox.com/mapbox-gl-js/v2.15.0/mapbox-gl.js'></script>

<!-- Dream X MapBox Utilities -->
<script src='/js/mapbox-utils.js'></script>

<script>
    // ===== INITIALIZE MAP UTILITIES AND DATA =====
    const mapboxToken = '<%= mapboxToken %>';
    const userLocations = <%- userLocations %>;
    const currentUserLocation = <%- currentUserLocation || 'null' %>;
    
    // Initialize Dream X MapBox utilities globally
    window.mapUtils = new DreamXMapUtils(mapboxToken);

    // ===== GLOBAL FUNCTION DECLARATIONS (for onclick handlers) =====
    
    // Helper function to escape HTML
    window.escapeHtml = function(text) {
        const div = document.createElement('div');
        div.textContent = text;
        return div.innerHTML;
    }

    // Show location status message
    window.showLocationStatus = function(message, type) {
        const status = document.getElementById('locationStatus');
        status.textContent = message;
        status.className = 'location-status ' + type;
        status.style.display = 'block';
    }

    // Open location form modal
    window.openLocationForm = function() {
        document.getElementById('locationFormModal').classList.add('active');
    }

    // Close location form modal
    window.closeLocationForm = function() {
        document.getElementById('locationFormModal').classList.remove('active');
        document.getElementById('locationForm').reset();
        document.getElementById('locationStatus').style.display = 'none';
    }

    // Close user modal
    window.closeUserModal = function() {
        document.getElementById('userModal').classList.remove('active');
    }

    // Detect user's location automatically
    window.detectLocation = function() {
        window.openLocationForm();
        window.showLocationStatus('Detecting your location...', 'info');

        // Use the utility's getCurrentLocation method
        window.mapUtils.getCurrentLocation()
            .then(async (location) => {
                const lat = location.latitude;
                const lon = location.longitude;
                
                document.getElementById('latitude').value = lat;
                document.getElementById('longitude').value = lon;
                
                // Use utility's reverse geocode method
                try {
                    const result = await window.mapUtils.reverseGeocode([lon, lat]);
                    document.getElementById('city').value = result.city || result.placeName;
                    window.showLocationStatus('Location detected! Please review and save.', 'success');
                } catch (error) {
                    console.error('Geocoding error:', error);
                    window.showLocationStatus('Location detected, but city lookup failed. Please enter city manually.', 'error');
                }
            })
            .catch((error) => {
                console.error('Geolocation error:', error);
                window.showLocationStatus('Failed to detect location. Please enter manually.', 'error');
            });
    }

    // Submit location to server
    window.submitLocation = async function() {
        const city = document.getElementById('city').value.trim();
        const latitude = document.getElementById('latitude').value;
        const longitude = document.getElementById('longitude').value;

        if (!city) {
            window.showLocationStatus('Please enter a city name.', 'error');
            return;
        }

        // If no coordinates, try to geocode the city using utility
        if (!latitude || !longitude) {
            window.showLocationStatus('Looking up coordinates...', 'info');
            try {
                const result = await window.mapUtils.geocode(city);
                const [lon, lat] = result.coordinates;
                document.getElementById('latitude').value = lat;
                document.getElementById('longitude').value = lon;
            } catch (error) {
                console.error('Geocoding error:', error);
                window.showLocationStatus('Failed to look up city coordinates.', 'error');
                return;
            }
        }

        // Submit to server
        window.showLocationStatus('Saving location...', 'info');
        
        try {
            const response = await fetch('/location', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                },
                body: JSON.stringify({
                    city: document.getElementById('city').value,
                    latitude: parseFloat(document.getElementById('latitude').value),
                    longitude: parseFloat(document.getElementById('longitude').value)
                })
            });

            const result = await response.json();

            if (response.ok) {
                window.showLocationStatus('Location saved successfully!', 'success');
                setTimeout(() => {
                    window.location.reload();
                }, 1500);
            } else {
                window.showLocationStatus(result.error || 'Failed to save location', 'error');
            }
        } catch (error) {
            console.error('Save error:', error);
            window.showLocationStatus('Failed to save location', 'error');
        }
    }

    // Show user details modal
    window.showUserModal = function(location) {
        const modal = document.getElementById('userModal');
        const avatar = document.getElementById('modalAvatar');
        const name = document.getElementById('modalName');
        const body = document.getElementById('modalBody');
        const profileLink = document.getElementById('modalProfileLink');
        
        // Set avatar
        avatar.innerHTML = '';
        if (location.profile_picture) {
            const img = document.createElement('img');
            img.src = '/uploads/' + location.profile_picture;
            img.alt = location.full_name;
            avatar.appendChild(img);
        } else {
            avatar.textContent = location.full_name.charAt(0).toUpperCase();
        }
        
        // Set name
        name.textContent = location.full_name;
        
        // Set body content
        let bodyHTML = '';
        
        if (location.city) {
            bodyHTML += `
                <div class="user-info-item">
                    <div class="user-info-icon">üìç</div>
                    <div class="user-info-content">
                        <div class="user-info-label">Location</div>
                        <div class="user-info-value">${escapeHtml(location.city)}</div>
                    </div>
                </div>
            `;
        }
        
        if (location.bio) {
            bodyHTML += `
                <div class="user-info-item">
                    <div class="user-info-icon">üìù</div>
                    <div class="user-info-content">
                        <div class="user-info-label">Bio</div>
                        <div class="user-info-value">${escapeHtml(location.bio)}</div>
                    </div>
                </div>
            `;
        }
        
        if (location.last_updated) {
            const updatedDate = new Date(location.last_updated);
            bodyHTML += `
                <div class="user-info-item">
                    <div class="user-info-icon">üïê</div>
                    <div class="user-info-content">
                        <div class="user-info-label">Last Updated</div>
                        <div class="user-info-value">${updatedDate.toLocaleDateString()}</div>
                    </div>
                </div>
            `;
        }
        
        body.innerHTML = bodyHTML || '<p style="text-align: center; color: #666;">No additional information available.</p>';
        
        // Set profile link
        profileLink.href = '/profile/' + location.user_id;
        
        // Show modal
        modal.classList.add('active');
    }

    // ===== MAP INITIALIZATION =====
    // Create map with 3D terrain and buildings enabled
    const map = window.mapUtils.createMap({
        containerId: 'map',
        center: currentUserLocation ? [currentUserLocation.longitude, currentUserLocation.latitude] : [-98.5795, 39.8283],
        zoom: currentUserLocation ? 10 : 3,
        enable3D: true, // Enable 3D terrain and buildings
        navigationControl: true,
        fullscreenControl: true,
        geolocateControl: true // Add user location button
    });

    // Add user markers using the utility
    map.on('load', function() {
        window.mapUtils.addUserMarkers(map, userLocations, window.showUserModal);
        
        // If there are multiple locations, fit bounds to show all
        if (userLocations.length > 1) {
            const coordinates = userLocations.map(loc => [loc.longitude, loc.latitude]);
            window.mapUtils.fitBounds(map, coordinates, { padding: 100, maxZoom: 10 });
        }
    });

    // Close modals on background click
    document.getElementById('userModal').addEventListener('click', function(e) {
        if (e.target === this) {
            window.closeUserModal();
        }
    });

    document.getElementById('locationFormModal').addEventListener('click', function(e) {
        if (e.target === this) {
            window.closeLocationForm();
        }
    });
</script>

