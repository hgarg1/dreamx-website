<style>
  .team-hero {
    background: linear-gradient(135deg, #0b1020 0%, #1a1f3a 50%, #0f172a 100%);
    padding: 80px 0 60px;
    text-align: center;
    position: relative;
    overflow: hidden;
  }
  
  .team-hero::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: radial-gradient(circle at 50% 0%, rgba(102, 126, 234, 0.15), transparent 60%);
    pointer-events: none;
  }
  
  .team-hero-content {
    max-width: 800px;
    margin: 0 auto;
    padding: 0 24px;
    position: relative;
    z-index: 1;
  }
  
  .team-hero h1 {
    font-size: 56px;
    font-weight: 900;
    margin: 0 0 20px;
    background: linear-gradient(135deg, #e5e7eb, #cbd5e1);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }
  
  .team-hero-subtitle {
    font-size: 24px;
    color: #94a3b8;
    font-weight: 600;
    margin: 0 0 16px;
  }
  
  .team-hero-description {
    font-size: 18px;
    color: #cbd5e1;
    line-height: 1.8;
    margin: 0;
  }
  
  .team-container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 80px 24px;
  }
  
  .team-section {
    margin-bottom: 80px;
  }
  
  .section-header {
    text-align: center;
    margin-bottom: 60px;
  }
  
  .section-badge {
    display: inline-block;
    background: linear-gradient(135deg, rgba(102, 126, 234, 0.2), rgba(118, 75, 162, 0.2));
    border: 1px solid rgba(102, 126, 234, 0.3);
    padding: 8px 20px;
    border-radius: 999px;
    color: #667eea;
    font-size: 14px;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 1px;
    margin-bottom: 16px;
  }
  
  .section-title {
    font-size: 36px;
    font-weight: 900;
    color: #e5e7eb;
    margin: 0;
  }
  
  .team-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(340px, 1fr));
    gap: 40px;
  }
  
  .team-card {
    background: rgba(15, 23, 42, 0.8);
    backdrop-filter: blur(20px);
    border: 1px solid rgba(255, 255, 255, 0.08);
    border-radius: 24px;
    overflow: hidden;
    transition: all 0.4s cubic-bezier(0.34, 1.56, 0.64, 1);
    position: relative;
  }
  
  .team-card:hover {
    transform: translateY(-8px);
    box-shadow: 0 20px 60px rgba(0, 0, 0, 0.4), 0 0 0 1px rgba(102, 126, 234, 0.3);
    border-color: rgba(102, 126, 234, 0.3);
  }
  
  .team-card-image-wrapper {
    position: relative;
    height: 320px;
    background: linear-gradient(135deg, #667eea, #764ba2);
    overflow: hidden;
  }
  
  .team-card-image {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.6s ease;
  }
  
  .team-card:hover .team-card-image {
    transform: scale(1.08);
  }
  
  .team-card-gradient {
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    height: 50%;
    background: linear-gradient(to top, rgba(15, 23, 42, 0.9), transparent);
  }
  
  .team-card-body {
    padding: 32px;
  }
  
  .member-name {
    font-size: 24px;
    font-weight: 900;
    color: #e5e7eb;
    margin: 0 0 8px;
  }
  
  .member-role {
    display: inline-block;
    background: linear-gradient(135deg, #667eea, #764ba2);
    color: white;
    padding: 6px 16px;
    border-radius: 999px;
    font-size: 13px;
    font-weight: 700;
    margin-bottom: 20px;
  }
  
  .member-bio {
    color: #94a3b8;
    font-size: 15px;
    line-height: 1.7;
    margin: 0 0 24px;
  }
  
  .member-expertise {
    display: flex;
    flex-wrap: wrap;
    gap: 8px;
    margin-bottom: 24px;
  }
  
  .expertise-tag {
    background: rgba(102, 126, 234, 0.1);
    border: 1px solid rgba(102, 126, 234, 0.3);
    color: #94a3b8;
    padding: 6px 14px;
    border-radius: 999px;
    font-size: 12px;
    font-weight: 600;
  }
  
  .member-social {
    display: flex;
    gap: 12px;
    padding-top: 24px;
    border-top: 1px solid rgba(255, 255, 255, 0.08);
  }
  
  .social-link {
    width: 40px;
    height: 40px;
    background: rgba(102, 126, 234, 0.1);
    border: 1px solid rgba(102, 126, 234, 0.3);
    border-radius: 12px;
    display: flex;
    align-items: center;
    justify-content: center;
    color: #667eea;
    text-decoration: none;
    font-size: 18px;
    transition: all 0.3s;
  }
  
  .social-link:hover {
    background: linear-gradient(135deg, #667eea, #764ba2);
    color: white;
    transform: translateY(-2px);
  }
  
  .join-cta {
    background: linear-gradient(135deg, rgba(102, 126, 234, 0.1), rgba(118, 75, 162, 0.1));
    border: 2px dashed rgba(102, 126, 234, 0.3);
    border-radius: 24px;
    padding: 60px 40px;
    text-align: center;
    margin-top: 80px;
  }
  
  .join-cta h2 {
    font-size: 36px;
    font-weight: 900;
    color: #e5e7eb;
    margin: 0 0 16px;
  }
  
  .join-cta p {
    font-size: 18px;
    color: #94a3b8;
    margin: 0 0 32px;
    line-height: 1.6;
  }
  
  .join-btn {
    display: inline-block;
    background: linear-gradient(135deg, #667eea, #764ba2);
    color: white;
    padding: 16px 40px;
    border-radius: 16px;
    text-decoration: none;
    font-size: 18px;
    font-weight: 700;
    transition: all 0.3s;
    box-shadow: 0 10px 30px rgba(102, 126, 234, 0.4);
  }
  
  .join-btn:hover {
    transform: translateY(-2px);
    box-shadow: 0 14px 40px rgba(102, 126, 234, 0.5);
  }
  
  @media (max-width: 768px) {
    .team-hero h1 {
      font-size: 40px;
    }
    
    .team-hero-subtitle {
      font-size: 20px;
    }
    
    .team-grid {
      grid-template-columns: 1fr;
    }
  }
</style>

