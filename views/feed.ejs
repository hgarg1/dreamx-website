    <script>
      // Global functions need to be outside DOMContentLoaded
      let selectedVideoDuration = null;
      let pendingAudioFile = null;
      let audioPreviewUrl = null;
      let audioPreviewLoopHandler = null;
      let audioTrimState = { duration: 0, maxDuration: 15, start: 0, file: null };
      let composerWasOpen = false;
      const modalStack = [];
      let previewMediaUrl = null;

      const lockBodyScroll = () => document.body.classList.add('modal-open');
      const unlockBodyScroll = () => document.body.classList.remove('modal-open');

      function setModalVisibility(modal, shouldShow, { unlock = true } = {}) {
        if (!modal) return;
        if (shouldShow) {
          if (modal.classList.contains('is-active')) return;
          modal.classList.add('is-active');
          modal.setAttribute('aria-hidden', 'false');
          modalStack.push(modal);
          lockBodyScroll();
          return;
        }

        if (!modal.classList.contains('is-active')) return;
        modal.classList.remove('is-active');
        modal.setAttribute('aria-hidden', 'true');
        const idx = modalStack.lastIndexOf(modal);
        if (idx !== -1) modalStack.splice(idx, 1);
        if (unlock && modalStack.length === 0) {
          unlockBodyScroll();
        }
      }

      function showModal(modal) { setModalVisibility(modal, true); }
      function hideModal(modal, options = {}) { setModalVisibility(modal, false, options); }

      document.addEventListener('keydown', (evt) => {
        if (evt.key === 'Escape' && modalStack.length) {
          evt.preventDefault();
          const top = modalStack[modalStack.length - 1];
          hideModal(top);
        }
      });

      function setComposerType(type = 'text') {
        const typeInput = document.getElementById('postContentType');
        if (typeInput) typeInput.value = type;
        const mediaSection = document.getElementById('mediaUploadSection');
        const mediaInput = document.getElementById('mediaInput');
        const buttons = document.querySelectorAll('.composer-action');
        buttons.forEach((btn) => {
          const isActive = btn.dataset.type === type;
          btn.classList.toggle('is-active', isActive);
          btn.setAttribute('aria-pressed', isActive ? 'true' : 'false');
        });

        if (mediaSection && mediaInput) {
          if (type === 'image') {
            mediaSection.style.display = 'block';
            mediaInput.accept = 'image/*';
            mediaInput.required = true;
          } else if (type === 'video') {
            mediaSection.style.display = 'block';
            mediaInput.accept = 'video/*,image/gif';
            mediaInput.required = true;
          } else {
            mediaSection.style.display = 'none';
            mediaInput.required = false;
          }
        }

        updateComposerPreview(type);
      }

      function openPostComposer(type = 'text') {
        const modal = document.getElementById('postComposerModal');
        if (!modal) { console.error('Modal not found!'); return; }
        resetComposerPreview();
        setComposerType(type);
        showModal(modal);
        composerWasOpen = true;
      }

      function closePostComposer() {
        const modal = document.getElementById('postComposerModal');
        if (!modal) return;
        hideModal(modal);
        composerWasOpen = false;
        document.getElementById('postForm').reset();
        document.getElementById('mediaPreview').innerHTML = '';
        setComposerType('text');
        clearAudioUpload();
        resetComposerPreview();
      }

      function suspendPostComposerForAudio() {
        const modal = document.getElementById('postComposerModal');
        if (modal && modal.classList.contains('is-active')) {
          hideModal(modal, { unlock: false });
          composerWasOpen = true;
        } else {
          composerWasOpen = false;
        }
      }

      function resumePostComposerAfterAudio() {
        const modal = document.getElementById('postComposerModal');
        if (composerWasOpen && modal) {
          showModal(modal);
          composerWasOpen = false;
          return true;
        }
        composerWasOpen = false;
        return false;
      }

      function clearAudioUpload() {
        const audioInput = document.getElementById('audioInput');
        const audioPreview = document.getElementById('audioPreview');
        if (audioInput) audioInput.value = '';
        if (audioPreview) audioPreview.style.display = 'none';
        const audioDurationHint = document.getElementById('audioDurationHint');
        if (audioDurationHint) audioDurationHint.textContent = 'Audio will loop in background at 30% volume';
        updateAudioTrimMeta(null, 0);
        stopAudioPreviewPlayback();
        pendingAudioFile = null;
        audioTrimState = { duration: 0, maxDuration: 15, start: 0, file: null };
        updateComposerPreview();
      }

      function resetComposerPreview() {
        const typeLabel = document.getElementById('composerPreviewType');
        const titleLabel = document.getElementById('composerPreviewTitle');
        const bodyLabel = document.getElementById('composerPreviewBody');
        const mediaContainer = document.getElementById('composerPreviewMedia');
        const audioRow = document.getElementById('composerPreviewAudio');
        if (typeLabel) typeLabel.textContent = '‚úçÔ∏è Text update';
        if (titleLabel) titleLabel.textContent = 'Ready to inspire?';
        if (bodyLabel) bodyLabel.textContent = 'As you add a title, story, and media, we‚Äôll mirror the vibe here so you always know how your post will land.';
        if (mediaContainer) { mediaContainer.innerHTML = '<p class="preview-placeholder">Attach photos or reels to see them here.</p>'; }
        if (audioRow) audioRow.style.display = 'none';
        if (previewMediaUrl) {
          URL.revokeObjectURL(previewMediaUrl);
          previewMediaUrl = null;
        }
      }

      function renderPreviewMedia(file) {
        const mediaContainer = document.getElementById('composerPreviewMedia');
        if (!mediaContainer) return;
        mediaContainer.innerHTML = '';
        if (previewMediaUrl) {
          URL.revokeObjectURL(previewMediaUrl);
          previewMediaUrl = null;
        }

        if (!file) {
          mediaContainer.innerHTML = '<p class="preview-placeholder">Attach photos or reels to see them here.</p>';
          return;
        }

        previewMediaUrl = URL.createObjectURL(file);
        if (file.type.startsWith('image/')) {
          const img = document.createElement('img');
          img.src = previewMediaUrl;
          img.alt = 'Selected image';
          img.style.maxWidth = '100%';
          img.style.borderRadius = '14px';
          mediaContainer.appendChild(img);
        } else if (file.type.startsWith('video/')) {
          const video = document.createElement('video');
          video.src = previewMediaUrl;
          video.controls = true;
          video.style.width = '100%';
          video.style.borderRadius = '14px';
          mediaContainer.appendChild(video);
        } else {
          mediaContainer.innerHTML = '<p class="preview-placeholder">Unsupported media type for preview.</p>';
        }
      }

      function updateComposerPreview(typeOverride = null) {
        const typeLabel = document.getElementById('composerPreviewType');
        const titleLabel = document.getElementById('composerPreviewTitle');
        const bodyLabel = document.getElementById('composerPreviewBody');
        const audioRow = document.getElementById('composerPreviewAudio');
        const audioName = document.getElementById('composerPreviewAudioName');
