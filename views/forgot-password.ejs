<%- include('partials/header') %>

<style>
  .verify-container {
    min-height: 100vh;
    background: linear-gradient(135deg, #0b1020 0%, #1a1f3a 50%, #667eea 100%);
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 40px 20px;
    position: relative;
    overflow: hidden;
  }

  .verify-container::before,
  .verify-container::after {
    content: '';
    position: absolute;
    width: 100%;
    height: 100%;
    background: radial-gradient(circle, rgba(102, 126, 234, 0.15) 0%, transparent 70%);
    animation: float 20s ease-in-out infinite;
  }

  .verify-container::after {
    bottom: -50%;
    left: -50%;
    animation-direction: reverse;
  }

  @keyframes float {
    0%, 100% { transform: translate(0, 0) rotate(0deg); }
    33% { transform: translate(30px, -30px) rotate(120deg); }
    66% { transform: translate(-20px, 20px) rotate(240deg); }
  }

  .verify-card {
    max-width: 480px;
    width: 100%;
    background: rgba(15, 23, 42, 0.95);
    backdrop-filter: blur(20px);
    border: 1px solid rgba(255, 255, 255, 0.1);
    border-radius: 32px;
    overflow: hidden;
    box-shadow: 0 30px 80px rgba(0, 0, 0, 0.5), 0 0 0 1px rgba(255, 255, 255, 0.05);
    position: relative;
    z-index: 1;
    animation: slideIn 0.6s cubic-bezier(0.34, 1.56, 0.64, 1);
  }

  @keyframes slideIn {
    from { opacity: 0; transform: translateY(30px) scale(0.95); }
    to { opacity: 1; transform: translateY(0) scale(1); }
  }

  .verify-header {
    background: linear-gradient(135deg, #667eea, #764ba2);
    padding: 48px 40px;
    text-align: center;
    position: relative;
  }

  .verify-icon {
    width: 80px;
    height: 80px;
    background: rgba(255, 255, 255, 0.2);
    backdrop-filter: blur(10px);
    border-radius: 24px;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 40px;
    margin: 0 auto 20px;
    animation: pulse 2s ease-in-out infinite;
  }

  @keyframes pulse {
    0%, 100% { transform: scale(1); box-shadow: 0 0 0 0 rgba(255, 255, 255, 0.7); }
    50% { transform: scale(1.05); box-shadow: 0 0 0 20px rgba(255, 255, 255, 0); }
  }

  .verify-header h1 {
    color: white;
    font-size: 32px;
    font-weight: 900;
    margin: 0 0 12px;
  }

  .verify-header p {
    color: rgba(255, 255, 255, 0.9);
    font-size: 16px;
    margin: 0;
    line-height: 1.6;
  }

  .verify-body {
    padding: 40px;
  }

  .verify-instructions {
    background: linear-gradient(135deg, rgba(102, 126, 234, 0.1), rgba(118, 75, 162, 0.1));
    border-left: 4px solid #667eea;
    padding: 20px;
    border-radius: 12px;
    margin-bottom: 32px;
  }

  .verify-instructions p {
    color: #cbd5e1;
    font-size: 15px;
    line-height: 1.6;
    margin: 0;
  }

  .code-label {
    display: block;
    color: #cbd5e1;
    font-weight: 600;
    font-size: 14px;
    margin-bottom: 12px;
  }

  .verify-btn {
    width: 100%;
    padding: 18px;
    background: linear-gradient(135deg, #667eea, #764ba2);
    color: white;
    border: none;
    border-radius: 16px;
    font-size: 18px;
    font-weight: 700;
    cursor: pointer;
    transition: all 0.3s;
    box-shadow: 0 10px 30px rgba(102, 126, 234, 0.4);
  }

  .verify-btn:hover:not(:disabled) {
    transform: translateY(-2px);
    box-shadow: 0 14px 40px rgba(102, 126, 234, 0.5);
  }
</style>

<section class="verify-container">
  <div class="verify-card" style="max-width:520px;">
    <div class="verify-header">
      <div class="verify-icon">üîê</div>
      <h1>Forgot your password?</h1>
      <p>We'll email you a secure link to reset it.</p>
    </div>
    <div class="verify-body">
      <% if (error) { %>
        <div style="background:rgba(239,68,68,0.12);border:1px solid rgba(239,68,68,0.35);color:#fecdd3;padding:14px 16px;border-radius:12px;margin-bottom:16px;font-weight:700;">
          <%= error %>
        </div>
      <% } %>
      <% if (success) { %>
        <div style="background:rgba(34,197,94,0.12);border:1px solid rgba(34,197,94,0.35);color:#bbf7d0;padding:14px 16px;border-radius:12px;margin-bottom:16px;font-weight:700;">
          <%= success %>
        </div>
      <% } %>

      <div class="verify-instructions" style="margin-bottom:24px;">
        <p>Enter the email address linked to your Dream X account. We'll send a one-time link that expires in 60 minutes.</p>
      </div>

      <form action="/forgot-password" method="POST" class="code-input-container">
        <label class="code-label" for="email">Email address</label>
        <div class="code-input-wrapper" style="display:block;">
          <input
            id="email"
            name="email"
            type="email"
            required
            placeholder="you@example.com"
            style="width:100%;max-width:none;height:54px;padding:0 16px;border-radius:12px;border:1px solid rgba(255,255,255,0.12);background:rgba(15,23,42,0.6);color:#e5e7eb;font-size:16px;"
          >
        </div>
        <button type="submit" class="verify-btn" style="margin-top:12px;">Send reset link</button>
      </form>

      <div style="text-align:center;margin-top:18px;">
        <a href="/login" style="color:#a5b4fc;text-decoration:none;font-weight:700;">Back to sign in</a>
      </div>
    </div>
  </div>
</section>

<%- include('partials/footer') %>
