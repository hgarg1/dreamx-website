<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <link rel="stylesheet" href="/css/style.css">
    <link rel="stylesheet" href="/css/admin.css">
    <style>
        * { box-sizing: border-box; }
        body { background: #f5f7fa; }
        
        .moderation-container {
            max-width: 1600px;
            margin: 40px auto;
            padding: 0 20px;
        }
        
        .moderation-header {
            background: linear-gradient(135deg, #ff4fa3, #764ba2);
            padding: 40px;
            border-radius: 20px;
            margin-bottom: 30px;
            color: white;
            box-shadow: 0 8px 32px rgba(255, 79, 163, 0.3);
            position: relative;
            overflow: hidden;
        }
        
        .moderation-header::before {
            content: '';
            position: absolute;
            top: -50%;
            right: -10%;
            width: 400px;
            height: 400px;
            background: rgba(255,255,255,0.1);
            border-radius: 50%;
            animation: float 6s ease-in-out infinite;
        }
        
        @keyframes float {
            0%, 100% { transform: translateY(0px); }
            50% { transform: translateY(-20px); }
        }
        
        .moderation-header h1 {
            font-size: 2.5rem;
            margin: 0 0 10px 0;
            position: relative;
            z-index: 1;
        }
        
        .moderation-header p {
            font-size: 1.1rem;
            opacity: 0.95;
            position: relative;
            z-index: 1;
            margin: 0;
        }
        
        .stats-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(240px, 1fr));
            gap: 20px;
            margin-bottom: 30px;
        }
        
        .stat-card {
            background: white;
            padding: 25px;
            border-radius: 16px;
            box-shadow: 0 4px 20px rgba(0,0,0,0.06);
            border: 1px solid rgba(255, 79, 163, 0.1);
            transition: all 0.3s;
            position: relative;
            overflow: hidden;
        }
        
        .stat-card:hover {
            transform: translateY(-4px);
            box-shadow: 0 8px 30px rgba(255, 79, 163, 0.2);
        }
        
        .stat-card::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            width: 4px;
            height: 100%;
            background: linear-gradient(135deg, #ff4fa3, #764ba2);
        }
        
        .stat-value {
            font-size: 2.5rem;
            font-weight: 700;
            background: linear-gradient(135deg, #ff4fa3, #764ba2);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
            margin: 0;
        }
        
        .stat-label {
            color: #6b7280;
            font-size: 0.95rem;
            font-weight: 600;
            text-transform: uppercase;
            letter-spacing: 0.5px;
            margin-top: 8px;
        }
        
        .controls-bar {
            background: white;
            padding: 20px;
            border-radius: 16px;
            margin-bottom: 25px;
            display: flex;
            gap: 15px;
            flex-wrap: wrap;
            align-items: center;
            box-shadow: 0 2px 12px rgba(0,0,0,0.05);
        }
        
        .search-box {
            flex: 1;
            min-width: 280px;
            position: relative;
        }
        
        .search-box input {
            width: 100%;
            padding: 12px 16px 12px 45px;
            border: 2px solid rgba(118, 75, 162, 0.2);
            border-radius: 12px;
            font-size: 0.95rem;
            transition: all 0.3s;
        }
        
        .search-box input:focus {
            outline: none;
            border-color: #ff4fa3;
            box-shadow: 0 0 0 3px rgba(255, 79, 163, 0.1);
        }
        
        .search-box::before {
            content: 'üîç';
            position: absolute;
            left: 16px;
            top: 50%;
            transform: translateY(-50%);
            font-size: 1.2rem;
        }
        
        .filter-group {
            display: flex;
            gap: 10px;
            align-items: center;
        }
        
        .filter-label {
            font-weight: 600;
            color: #764ba2;
            font-size: 0.9rem;
        }
        
        .filter-select {
            padding: 10px 16px;
            border: 2px solid rgba(118, 75, 162, 0.2);
            border-radius: 10px;
            background: white;
            font-weight: 600;
            color: #333;
            cursor: pointer;
            transition: all 0.3s;
        }
        
        .filter-select:hover, .filter-select:focus {
            border-color: #ff4fa3;
            outline: none;
        }
        
        .moderation-tabs {
            display: flex;
            gap: 15px;
            margin-bottom: 30px;
            background: white;
            padding: 8px;
            border-radius: 16px;
            box-shadow: 0 2px 12px rgba(0,0,0,0.05);
        }
        
        .tab-btn {
            flex: 1;
            padding: 14px 24px;
            background: transparent;
            border: none;
            color: #764ba2;
            font-weight: 700;
            cursor: pointer;
            border-radius: 12px;
            transition: all 0.3s;
            font-size: 1rem;
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 8px;
        }
        
        .tab-btn:hover {
            background: rgba(255, 79, 163, 0.08);
        }
        
        .tab-btn.active {
            background: linear-gradient(135deg, #ff4fa3, #764ba2);
            color: white;
            box-shadow: 0 4px 15px rgba(255, 79, 163, 0.3);
        }
        
        .tab-badge {
            background: rgba(255,255,255,0.3);
            padding: 3px 10px;
            border-radius: 12px;
            font-size: 0.85rem;
            font-weight: 700;
        }
        
        .tab-btn.active .tab-badge {
            background: rgba(255,255,255,0.25);
        }
        
        .tab-content {
            display: none;
            animation: fadeIn 0.4s ease;
        }
        
        .tab-content.active {
            display: block;
        }
        
        @keyframes fadeIn {
            from { opacity: 0; transform: translateY(10px); }
            to { opacity: 1; transform: translateY(0); }
        }
        
        .moderation-table {
            background: white;
            border-radius: 16px;
            overflow: hidden;
            box-shadow: 0 4px 20px rgba(0,0,0,0.08);
            border: 1px solid rgba(255, 79, 163, 0.1);
        }
        
        .moderation-table table {
            width: 100%;
            border-collapse: collapse;
        }
        
        .moderation-table th {
            background: linear-gradient(135deg, #ff4fa3, #764ba2);
            color: white;
            padding: 18px 20px;
            text-align: left;
            font-weight: 700;
            font-size: 0.9rem;
            text-transform: uppercase;
            letter-spacing: 0.5px;
        }
        
        .moderation-table td {
            padding: 18px 20px;
            border-bottom: 1px solid rgba(0,0,0,0.05);
            vertical-align: middle;
        }
        
        .moderation-table tr:last-child td {
            border-bottom: none;
        }
        
        .moderation-table tbody tr {
            transition: all 0.3s;
        }
        
        .moderation-table tbody tr:hover {
            background: rgba(255, 79, 163, 0.05);
            transform: scale(1.01);
        }
        
        .status-badge {
            padding: 7px 14px;
            border-radius: 20px;
            font-size: 0.8rem;
            font-weight: 700;
            text-transform: uppercase;
            letter-spacing: 0.3px;
            display: inline-flex;
            align-items: center;
            gap: 6px;
        }
        
        .status-badge::before {
            content: '';
            width: 8px;
            height: 8px;
            border-radius: 50%;
            display: inline-block;
        }
        
        .status-pending {
            background: linear-gradient(135deg, #fff3cd, #ffe69c);
            color: #856404;
            border: 1px solid #ffc107;
        }
        
        .status-pending::before { background: #ffc107; }
        
        .status-reviewing {
            background: linear-gradient(135deg, #cfe2ff, #9ec5fe);
            color: #084298;
            border: 1px solid #0d6efd;
        }
        
        .status-reviewing::before { background: #0d6efd; }
        
        .status-resolved {
            background: linear-gradient(135deg, #d1e7dd, #a3cfbb);
            color: #0f5132;
            border: 1px solid #198754;
        }
        
        .status-resolved::before { background: #198754; }
        
        .status-dismissed {
            background: linear-gradient(135deg, #f8d7da, #f1aeb5);
            color: #842029;
            border: 1px solid #dc3545;
        }
        
        .status-dismissed::before { background: #dc3545; }
        
        .action-btns {
            display: flex;
            gap: 10px;
            flex-wrap: wrap;
        }
        
        .btn-sm {
            padding: 8px 16px;
            font-size: 0.85rem;
            border-radius: 10px;
            border: none;
            cursor: pointer;
            transition: all 0.3s;
            font-weight: 700;
            display: inline-flex;
            align-items: center;
            gap: 6px;
            white-space: nowrap;
        }
        
        .btn-primary {
            background: linear-gradient(135deg, #ff4fa3, #764ba2);
            color: white;
            box-shadow: 0 2px 8px rgba(255, 79, 163, 0.3);
        }
        
        .btn-primary:hover {
            box-shadow: 0 4px 16px rgba(255, 79, 163, 0.4);
        }
        
        .btn-warning {
            background: linear-gradient(135deg, #ffc107, #ff9800);
            color: #000;
            box-shadow: 0 2px 8px rgba(255, 193, 7, 0.3);
        }
        
        .btn-warning:hover {
            box-shadow: 0 4px 16px rgba(255, 193, 7, 0.4);
        }
        
        .btn-danger {
            background: linear-gradient(135deg, #dc3545, #c82333);
            color: white;
            box-shadow: 0 2px 8px rgba(220, 53, 69, 0.3);
        }
        
        .btn-danger:hover {
            box-shadow: 0 4px 16px rgba(220, 53, 69, 0.4);
        }
        
        .btn-success {
            background: linear-gradient(135deg, #28a745, #20c997);
            color: white;
            box-shadow: 0 2px 8px rgba(40, 167, 69, 0.3);
        }
        
        .btn-success:hover {
            box-shadow: 0 4px 16px rgba(40, 167, 69, 0.4);
        }
        
        .btn-sm:hover {
            transform: translateY(-2px);
        }
        
        .btn-sm:active {
            transform: translateY(0);
        }
        
        .alert {
            padding: 15px 20px;
            border-radius: 8px;
            margin-bottom: 20px;
            font-weight: 600;
        }
        
        .alert-success {
            background: #d1e7dd;
            color: #0f5132;
            border-left: 4px solid #28a745;
        }
        
        .alert-error {
            background: #f8d7da;
            color: #842029;
            border-left: 4px solid #dc3545;
        }
        
        .user-link {
            color: #764ba2;
            text-decoration: none;
            font-weight: 600;
            transition: color 0.3s;
        }
        
        .user-link:hover {
            color: #ff4fa3;
        }
        
        .modal {
            display: none;
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: rgba(0,0,0,0.7);
            z-index: 10000;
            backdrop-filter: blur(8px);
            animation: fadeInModal 0.3s ease;
        }
        
        @keyframes fadeInModal {
            from { opacity: 0; }
            to { opacity: 1; }
        }
        
        .modal.active {
            display: flex;
            align-items: center;
            justify-content: center;
        }
        
        .modal-content {
            background: white;
            padding: 35px;
            border-radius: 20px;
            max-width: 550px;
            width: 90%;
            box-shadow: 0 20px 60px rgba(0,0,0,0.4);
            animation: slideUp 0.3s ease;
            border: 2px solid rgba(255, 79, 163, 0.2);
        }
        
        @keyframes slideUp {
            from { transform: translateY(30px); opacity: 0; }
            to { transform: translateY(0); opacity: 1; }
        }
        
        .modal-header {
            margin-bottom: 25px;
            padding-bottom: 15px;
            border-bottom: 2px solid rgba(255, 79, 163, 0.15);
        }
        
        .modal-header h3 {
            margin: 0;
            background: linear-gradient(135deg, #ff4fa3, #764ba2);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
            font-size: 1.5rem;
        }
        
        .form-group {
            margin-bottom: 22px;
        }
        
        .form-group label {
            display: block;
            margin-bottom: 10px;
            font-weight: 700;
            color: #333;
            font-size: 0.95rem;
        }
        
        .form-group select,
        .form-group textarea,
        .form-group input {
            width: 100%;
            padding: 12px 16px;
            border: 2px solid rgba(118, 75, 162, 0.2);
            border-radius: 12px;
            font-family: inherit;
            font-size: 0.95rem;
            transition: all 0.3s;
        }
        
        .form-group select:focus,
        .form-group textarea:focus,
        .form-group input:focus {
            outline: none;
            border-color: #ff4fa3;
            box-shadow: 0 0 0 3px rgba(255, 79, 163, 0.1);
        }
        
        .form-group textarea {
            resize: vertical;
            min-height: 100px;
        }
        
        .modal-footer {
            display: flex;
            gap: 12px;
            justify-content: flex-end;
            margin-top: 25px;
            padding-top: 20px;
            border-top: 2px solid rgba(255, 79, 163, 0.1);
        }
        
        .btn-cancel {
            background: linear-gradient(135deg, #6c757d, #5a6268);
            color: white;
            box-shadow: 0 2px 8px rgba(108, 117, 125, 0.3);
        }
        
        .btn-cancel:hover {
            box-shadow: 0 4px 16px rgba(108, 117, 125, 0.4);
        }
        
        .empty-state {
            text-align: center;
            padding: 80px 20px;
            color: #999;
        }
        
        .empty-state > div:first-child {
            font-size: 64px;
            margin-bottom: 20px;
            opacity: 0.4;
            animation: float 3s ease-in-out infinite;
        }
        
        .empty-state h3 {
            color: #764ba2;
            font-size: 1.5rem;
            margin: 10px 0;
        }
        
        .empty-state p {
            color: #9ca3af;
        }
        
        .pagination {
            display: flex;
            justify-content: center;
            align-items: center;
            gap: 15px;
            margin-top: 30px;
            padding: 20px;
            background: white;
            border-radius: 16px;
            box-shadow: 0 2px 12px rgba(0,0,0,0.05);
        }
        
        .pagination button {
            padding: 10px 20px;
            border: 2px solid rgba(118, 75, 162, 0.2);
            background: white;
            border-radius: 10px;
            font-weight: 700;
            color: #764ba2;
            cursor: pointer;
            transition: all 0.3s;
        }
        
        .pagination button:hover:not(:disabled) {
            background: linear-gradient(135deg, #ff4fa3, #764ba2);
            color: white;
            border-color: transparent;
        }
        
        .pagination button:disabled {
            opacity: 0.3;
            cursor: not-allowed;
        }
        
        .pagination .page-info {
            font-weight: 700;
            color: #764ba2;
        }
        
        @media (max-width: 768px) {
            .stats-grid {
                grid-template-columns: 1fr;
            }
            
            .controls-bar {
                flex-direction: column;
            }
            
            .moderation-table {
                overflow-x: auto;
            }
            
            .modal-content {
                width: 95%;
                padding: 25px;
            }
        }
    </style>
</head>
<body>
    <%- include('partials/header') %>
    
    <div class="moderation-container">
        <div class="moderation-header">
            <h1>üõ°Ô∏è User Actions Moderation</h1>
            <p>Monitor and manage user blocks and reports</p>
        </div>
        
        <% if (typeof success !== 'undefined' && success) { %>
            <div class="alert alert-success"><%= success %></div>
        <% } %>
        <% if (typeof error !== 'undefined' && error) { %>
            <div class="alert alert-error"><%= error %></div>
        <% } %>
        
        <!-- Stats Dashboard -->
        <div class="stats-grid">
            <div class="stat-card">
                <div class="stat-value"><%= reports ? reports.length : 0 %></div>
                <div class="stat-label">Total Reports</div>
            </div>
            <div class="stat-card">
                <div class="stat-value"><%= reports ? reports.filter(r => r.status === 'pending').length : 0 %></div>
                <div class="stat-label">Pending</div>
            </div>
            <div class="stat-card">
                <div class="stat-value"><%= blocks ? blocks.length : 0 %></div>
                <div class="stat-label">Active Blocks</div>
            </div>
            <div class="stat-card">
                <div class="stat-value"><%= blocks ? blocks.filter(b => b.blocker_locked).length : 0 %></div>
                <div class="stat-label">Locked Users</div>
            </div>
        </div>
        
        <!-- Search and Filter Controls -->
        <div class="controls-bar">
            <div class="search-box">
                <input type="text" id="searchInput" placeholder="Search by username, reason, or ID...">
            </div>
            <div class="filter-group">
                <span class="filter-label">Status:</span>
                <select class="filter-select" id="statusFilter">
                    <option value="">All Statuses</option>
                    <option value="pending">Pending</option>
                    <option value="reviewing">Reviewing</option>
                    <option value="resolved">Resolved</option>
                    <option value="dismissed">Dismissed</option>
                </select>
            </div>
        </div>
        
        <div class="moderation-tabs">
            <button class="tab-btn active" data-tab="reports">
                üìã User Reports
                <span class="tab-badge"><%= reports ? reports.length : 0 %></span>
            </button>
            <button class="tab-btn" data-tab="blocks">
                üö´ User Blocks
                <span class="tab-badge"><%= blocks ? blocks.length : 0 %></span>
            </button>
        </div>
        
        <!-- REPORTS TAB -->
        <div id="reports" class="tab-content active">
            <div class="moderation-table">
                <% if (reports && reports.length > 0) { %>
                    <table>
                        <thead>
                            <tr>
                                <th>ID</th>
                                <th>Reporter</th>
                                <th>Reported User</th>
                                <th>Reason</th>
                                <th>Status</th>
                                <th>Date</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% reports.forEach(report => { %>
                                <tr data-status="<%= report.status %>" class="report-row">
                                    <td><strong style="color: #764ba2;">#<%= report.id %></strong></td>
                                    <td>
                                        <a href="/profile/<%= report.reporter_username || report.reporter_id %>" class="user-link">
                                            @<%= report.reporter_username || 'user' + report.reporter_id %>
                                        </a>
                                    </td>
                                    <td>
                                        <a href="/profile/<%= report.reported_username || report.reported_id %>" class="user-link">
                                            @<%= report.reported_username || 'user' + report.reported_id %>
                                        </a>
                                    </td>
                                    <td>
                                        <strong style="color: #333;"><%= report.reason %></strong>
                                        <% if (report.description) { %>
                                            <br><small style="color: #6b7280; line-height: 1.5;"><%= report.description.substring(0, 100) %><%= report.description.length > 100 ? '...' : '' %></small>
                                        <% } %>
                                    </td>
                                    <td>
                                        <span class="status-badge status-<%= report.status %>"><%= report.status %></span>
                                    </td>
                                    <td style="color: #6b7280;">
                                        <%= new Date(report.created_at).toLocaleDateString('en-US', { month: 'short', day: 'numeric', year: 'numeric' }) %>
                                    </td>
                                    <td>
                                        <div class="action-btns">
                                            <button class="btn-sm btn-primary" 
                                                data-report-id="<%= report.id %>" 
                                                data-reporter="<%= report.reporter_username || 'user' + report.reporter_id %>" 
                                                data-reported="<%= report.reported_username || 'user' + report.reported_id %>" 
                                                data-reason="<%= report.reason %>" 
                                                data-description="<%= (report.description || '').replace(/"/g, '&quot;') %>" 
                                                data-status="<%= report.status %>"
                                                onclick="reviewReport(this)">
                                                üëÅÔ∏è Review
                                            </button>
                                        </div>
                                    </td>
                                </tr>
                            <% }); %>
                        </tbody>
                    </table>
                <% } else { %>
                    <div class="empty-state">
                        <div style="font-size: 64px; margin-bottom: 20px;">üì≠</div>
                        <h3>No Reports</h3>
                        <p>No user reports to review at this time</p>
                    </div>
                <% } %>
            </div>
        </div>
        
        <!-- BLOCKS TAB -->
        <div id="blocks" class="tab-content">
            <div class="moderation-table">
                <% if (blocks && blocks.length > 0) { %>
                    <table>
                        <thead>
                            <tr>
                                <th>ID</th>
                                <th>Blocker</th>
                                <th>Blocked User</th>
                                <th>Reason</th>
                                <th>Date</th>
                                <th>Block Status</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% blocks.forEach(block => { %>
                                <tr class="block-row">
                                    <td><strong style="color: #764ba2;">#<%= block.id %></strong></td>
                                    <td>
                                        <a href="/profile/<%= block.blocker_username || block.blocker_id %>" class="user-link">
                                            @<%= block.blocker_username || 'user' + block.blocker_id %>
                                        </a>
                                        <% if (block.blocker_locked) { %>
                                            <span class="status-badge status-dismissed" style="margin-left: 8px; font-size: 0.7rem;">üîí LOCKED</span>
                                        <% } %>
                                    </td>
                                    <td>
                                        <a href="/profile/<%= block.blocked_username || block.blocked_id %>" class="user-link">
                                            @<%= block.blocked_username || 'user' + block.blocked_id %>
                                        </a>
                                    </td>
                                    <td style="color: #6b7280;"><%= block.reason || 'No reason provided' %></td>
                                    <td style="color: #6b7280;">
                                        <%= new Date(block.created_at).toLocaleDateString('en-US', { month: 'short', day: 'numeric', year: 'numeric' }) %>
                                    </td>
                                    <td>
                                        <% if (block.blocker_locked) { %>
                                            <span style="color: #dc3545; font-weight: 700; display: flex; align-items: center; gap: 6px;">
                                                ‚ö†Ô∏è Blocker Locked
                                            </span>
                                        <% } else { %>
                                            <span style="color: #28a745; font-weight: 700; display: flex; align-items: center; gap: 6px;">
                                                ‚úì Active
                                            </span>
                                        <% } %>
                                    </td>
                                    <td>
                                        <div class="action-btns">
                                            <% if (block.blocker_locked) { %>
                                                <form method="POST" action="/admin/moderation/users/<%= block.blocker_id %>/unlock-blocking" style="display: inline;">
                                                    <button type="submit" class="btn-sm btn-success">üîì Unlock Blocker</button>
                                                </form>
                                            <% } else { %>
                                                <button class="btn-sm btn-warning" 
                                                    data-blocker-id="<%= block.blocker_id %>" 
                                                    data-username="<%= block.blocker_username || 'user' + block.blocker_id %>"
                                                    onclick="lockBlocker(this)">
                                                    üîí Lock Blocker
                                                </button>
                                            <% } %>
                                        </div>
                                    </td>
                                </tr>
                            <% }); %>
                        </tbody>
                    </table>
                <% } else { %>
                    <div class="empty-state">
                        <div style="font-size: 64px; margin-bottom: 20px;">üö´</div>
                        <h3>No Blocks</h3>
                        <p>No user blocks to review at this time</p>
                    </div>
                <% } %>
            </div>
        </div>
    </div>
    
    <!-- Review Report Modal -->
    <div id="reviewReportModal" class="modal">
        <div class="modal-content">
            <div class="modal-header">
                <h3>Review User Report</h3>
            </div>
            <form id="reviewReportForm" method="POST">
                <div class="form-group">
                    <label>Report Details:</label>
                    <div id="reportDetails" style="padding: 15px; background: #f8f9fa; border-radius: 8px; margin-bottom: 15px;"></div>
                </div>
                <div class="form-group">
                    <label for="reportStatus">Status:</label>
                    <select id="reportStatus" name="status" required>
                        <option value="pending">Pending</option>
                        <option value="reviewing">Reviewing</option>
                        <option value="resolved">Resolved</option>
                        <option value="dismissed">Dismissed</option>
                    </select>
                </div>
                <div class="form-group">
                    <label for="adminNotes">Admin Notes:</label>
                    <textarea id="adminNotes" name="adminNotes" placeholder="Add notes about your decision..."></textarea>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn-sm btn-cancel" onclick="closeModal('reviewReportModal')">Cancel</button>
                    <button type="submit" class="btn-sm btn-primary">Update Report</button>
                </div>
            </form>
        </div>
    </div>
    
    <!-- Lock Blocker Modal -->
    <div id="lockBlockerModal" class="modal">
        <div class="modal-content">
            <div class="modal-header">
                <h3>Lock Block Functionality</h3>
            </div>
            <form id="lockBlockerForm" method="POST">
                <div class="form-group">
                    <label>User:</label>
                    <div id="blockerUsername" style="padding: 10px; background: #f8f9fa; border-radius: 8px; font-weight: 600;"></div>
                </div>
                <div class="form-group">
                    <label for="lockReason">Reason for Locking:</label>
                    <textarea id="lockReason" name="reason" required placeholder="Why are you locking this user's ability to block others?"></textarea>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn-sm btn-cancel" onclick="closeModal('lockBlockerModal')">Cancel</button>
                    <button type="submit" class="btn-sm btn-warning">Lock Blocker</button>
                </div>
            </form>
        </div>
    </div>
    
    <script>
        // Tab switching
        document.querySelectorAll('.tab-btn').forEach(btn => {
            btn.addEventListener('click', () => {
                document.querySelectorAll('.tab-btn').forEach(b => b.classList.remove('active'));
                document.querySelectorAll('.tab-content').forEach(c => c.classList.remove('active'));
                btn.classList.add('active');
                document.getElementById(btn.dataset.tab).classList.add('active');
            });
        });
        
        // Search functionality
        const searchInput = document.getElementById('searchInput');
        const statusFilter = document.getElementById('statusFilter');
        
        function filterTable() {
            const searchTerm = searchInput.value.toLowerCase();
            const statusValue = statusFilter.value.toLowerCase();
            const activeTab = document.querySelector('.tab-content.active');
            const rows = activeTab.querySelectorAll('tbody tr');
            
            rows.forEach(row => {
                const text = row.textContent.toLowerCase();
                const status = row.dataset.status || '';
                const matchesSearch = text.includes(searchTerm);
                const matchesStatus = !statusValue || status === statusValue;
                
                row.style.display = (matchesSearch && matchesStatus) ? '' : 'none';
            });
        }
        
        searchInput.addEventListener('input', filterTable);
        statusFilter.addEventListener('change', filterTable);
        
        function reviewReport(btn) {
            const id = btn.dataset.reportId;
            const reporter = btn.dataset.reporter;
            const reported = btn.dataset.reported;
            const reason = btn.dataset.reason;
            const description = btn.dataset.description;
            const status = btn.dataset.status;
            
            const modal = document.getElementById('reviewReportModal');
            const form = document.getElementById('reviewReportForm');
            const details = document.getElementById('reportDetails');
            
            details.innerHTML = `
                <p><strong>Reporter:</strong> @${reporter}</p>
                <p><strong>Reported User:</strong> @${reported}</p>
                <p><strong>Reason:</strong> ${reason}</p>
                ${description ? `<p><strong>Description:</strong> ${description}</p>` : ''}
            `;
            
            document.getElementById('reportStatus').value = status;
            form.action = `/admin/moderation/reports/${id}/status`;
            modal.classList.add('active');
        }
        
        function lockBlocker(btn) {
            const userId = btn.dataset.blockerId;
            const username = btn.dataset.username;
            
            const modal = document.getElementById('lockBlockerModal');
            const form = document.getElementById('lockBlockerForm');
            
            document.getElementById('blockerUsername').textContent = `@${username}`;
            form.action = `/admin/moderation/users/${userId}/lock-blocking`;
            modal.classList.add('active');
        }
        
        function closeModal(modalId) {
            document.getElementById(modalId).classList.remove('active');
        }
        
        // Close modals on background click
        document.querySelectorAll('.modal').forEach(modal => {
            modal.addEventListener('click', (e) => {
                if (e.target === modal) {
                    modal.classList.remove('active');
                }
            });
        });
    </script>
</body>
</html>
